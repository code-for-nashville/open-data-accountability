<p id="notice"><%= notice %></p>

<h1>Listing Datasets</h1>

<table>
  <thead>
    <tr>
      <th>Date updated</th>
      <th>Expected frequency of update</th>
      <th>Url</th>
      <th>Date created</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @datasets.each do |dataset| %>
      <tr>
        <td><%= dataset.date_updated %></td>
        <td><%= dataset.expected_frequency_of_update %></td>
        <td><%= dataset.url %></td>
        <td><%= dataset.date_created %></td>
        <td><%= link_to 'Show', dataset %></td>
        <td><%= link_to 'Edit', edit_dataset_path(dataset) %></td>
        <td><%= link_to 'Destroy', dataset, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

